<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="https://www.springframework.org/schema/beans"
       xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="https://www.springframework.org/schema/context"
       xsi:schemaLocation="https://www.springframework.org/schema/beans
                           https://www.springframework.org/schema/beans/spring-beans-6.1.xsd
                           https://www.springframework.org/schema/context
                           https://www.springframework.org/schema/context/spring-context-6.1.xsd">
    
    <context:annotation-config/>
    <context:component-scan base-package="com.firstProject"/>
    <!-- Bean definition for Student -->
    <bean id="student1" class="com.firstProject.Student">
        <property name="studentId" value="30551"/>
        <property name="studentName" value="Tanmay Gupta"/>
        <property name="studentAddress" value="Kanpur, Uttar Pradesh"/>
    </bean>

</beans>
